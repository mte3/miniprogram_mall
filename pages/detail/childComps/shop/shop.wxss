/* components/shop/shop.wxss */
.shopDetail {
    padding: 0 24rpx 24rpx 24rpx;
  }

  .shopImg {
    border-radius: 16rpx;
    width: 136rpx;
    height: 136rpx;
  }

  .shop {
    display: flex;
  }

  .shopMid {
    padding: 24rpx 12rpx;

  }

  .come {
    padding-top: 12rpx;
    font-size: 15rpx;
    flex: 1;
  }

  /*//*/
  .shopUnder {
    display: flex;
    padding-bottom: 24rpx;
    /*border-bottom: 6px solid #d4ccc6;*/
  }

  .text {
    color: black;
    font-weight: 600;
    padding-top: 12rpx;
    font-size: 28rpx;
  }

  .underLeft {
    text-align: center;
    padding: 48rpx 24rpx 0 0;
    border-right: solid 2px #d4ccc6;
    flex: 2;
    display: flex;
  }

  .score {
    display: flex;
    padding: 12rpx 0;
    font-size: 28rpx;
  }

  .scoreN {
    width: 80rpx;
    margin: 0 24rpx;
    color: green;
  }

  .isBetter {
    color: #ff5777;
  }

  .sells {
    flex: 1;
  }

  .fans {
    flex: 1;
  }

  .underRight {
    margin: auto;
    padding-left: 48rpx;
    flex: 3;
  }

  .gao {
    background-color: #ff5777;
    color: white;
    padding: 6rpx;
    border-radius: 6rpx;
  }

  .di {
    border-radius: 6rpx;
    background-color: darkgreen;
    color: white;
    padding: 6rpx;
  }

  .come {
    width: 272rpx;
    text-align: center;
    padding: 16rpx 0 ;
    background-color: #d4ccc6;
    position: relative;
    left: calc(50% - 136rpx);
    border-radius: 24rpx;
  }

  .goods {
    font-size: 24rpx;
    padding-top: 24rpx;
  }
